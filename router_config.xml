  </address>
</ip>
<mop>
  <enabled>false</enabled>
</mop>
<negotiation xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ethernet">
  <auto>true</auto>
</negotiation>
</GigabitEthernet>
<Loopback>
  <name>0</name>
  <description>Loopback fuer Routing</description>
  <ip>
  <address>
  <primary>
    <address>192.168.2.1</address>
    <mask>255.255.255.0</mask>
  </primary>
</address>
</ip>
</Loopback>
