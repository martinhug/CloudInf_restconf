<interface xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native"
           xmlns:ios="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
    <GigabitEthernet>
        <name>1</name>
        <description>RESTful API Interface</description>
        <ip>
            <address>
                <primary>
                    <address>{{connection_address}}</address>
                    <mask>{{connection_mask}}</mask>
                </primary>
            </address>
        </ip>
        <mop>
            <enabled>false</enabled>
        </mop>
        <negotiation xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ethernet">
            <auto>true</auto>
        </negotiation>
    </GigabitEthernet>
    <Loopback>
        <name>0</name>
        <description>Loopback fuer Routing</description>
        <ip>
            <address>
                <primary>
                    <address>{{loopback0_address}}</address>
                    <mask>{{loopback0_mask}}</mask>
                </primary>
            </address>
        </ip>
    </Loopback>
    <Loopback>
        <name>1</name>
        <description>Loopback fuer BGP</description>
        <ip>
            <address>
                <primary>
                    <address>{{loopback1_address}}</address>
                    <mask>{{loopback1_mask}}</mask>
                </primary>
            </address>
        </ip>
    </Loopback>
</interface>

<ospf xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ospf" xmlns:ios-ospf="http://cisco.com/ns/yang/Cisco-IOS-XE-ospf"
      xmlns:ios="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
<id>1</id>

<network>
    <ip>{{ip}}</ip>
    <mask>{{mask}}</mask>
    <area>{{area}}</area>
</network>

</ospf>

<bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp" xmlns:ios-bgp="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp"
     xmlns:ios="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
<id>2</id>
<neighbor>
    <id>{{neighbor_id}}</id>
    <remote-as>{{remote_as}}</remote-as>
    <ebgp-multihop>
        <max-hop>{{max_hop}}</max-hop>
    </ebgp-multihop>
    <update-source>
        <Loopback>{{update_source}}</Loopback>
    </update-source>
</neighbor>
</bgp>



