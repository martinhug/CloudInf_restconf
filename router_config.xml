<interface xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native"  xmlns:ios="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
  <GigabitEthernet>
    <name>1</name>
    <description>RESTful API Interface</description>
    <ip>
    <address>
