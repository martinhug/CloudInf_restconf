  <id>1</id>
  <network>
    <ip>2.2.2.2</ip>
    <mask>0.0.0.0</mask>
    <area>0</area>
  </network>
  <network>
    <ip>10.3.255.0</ip>
    <mask>0.0.0.255</mask>
    <area>0</area>
  </network>
  <network>
    <ip>192.168.2.0</ip>
    <mask>0.0.0.255</mask>
