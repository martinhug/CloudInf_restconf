</ospf>

<bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp"  xmlns:ios-bgp="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp"  xmlns:ios="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
  <id>2</id>
  <neighbor>
    <id>20.20.20.20</id>
    <remote-as>20</remote-as>
    <ebgp-multihop>
      <max-hop>2</max-hop>
    </ebgp-multihop>
    <update-source>
      <Loopback>1</Loopback>
    </update-source>
  </neighbor>
